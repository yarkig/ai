echo 'Ставим DE, драйвера и основные программы'
pacman -S gvfs network-manager-applet xf86-video-intel xorg xfce4 xfce4-goodies screenfetch pavucontrol pulseaudio vlc ttf-liberation ttf-dejavu zsh telegram-desktop chromium --noconfirm

echo 'Ставим AUR (yay)'
pacman -Syu --noconfirm
sh -c "$(curl -fsSL git.io/yay-install.sh)" --noconfirm






echo 'Автозапуск XFCE4'
mkdir /etc/systemd/system/getty@tty1.service.d
echo "[Service]" > /etc/systemd/system/getty@tty1.service.d/override.conf
echo "ExecStart=" >> /etc/systemd/system/getty@tty1.service.d/override.conf
echo "ExecStart=-/usr/bin/agetty --autologin igor --noclear %I 38400 linux" >> /etc/systemd/system/getty@tty1.service.d/override.conf
echo '[[ -z $DISPLAY && $XDG_VTNR -eq 1 ]] && exec startx' >> /home/igor/.bash_profile
echo "exec startxfce4" > /home/igor/.xinitrc
